<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/login.css">
    <title>Document</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
	<%- include('partials/toast') -%>
   <div class="login-wrap">
	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
		<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
		<div class="login-form">
		    <form action="/signin" method="POST">
				<div class="sign-in-htm">
					<div class="group">
						<label for="userSignIn" class="label">Username</label>
						<input id="userSignIn" type="text" class="input" name="name" required>
					</div>
					<div class="group">
						<label for="passSignIn" class="label">Password</label>
						<input id="passSignIn" type="password" class="input" data-type="password" name="password" required>
						<div class="alert alert-danger d-none" id="signin-alert"></div>
					</div>
					<div class="group">
						<button type="submit" class="button" value="Sign In" >Sign In</button>
					</div>
					<div class="hr"></div>
				</div>
			</form>
			<form action="/register" method="POST">
			<div class="sign-up-htm">
				<div class="group">
					<label for="usrname" class="label">Username</label>
					<input id="usrname" type="text" class="input" name="name" required>
				</div>
				<div class="group">
					<label for="psw" class="label">Password</label>
					<input id="psw" type="password" class="input" data-type="password" name="password" pattern=".{8,}" title="Must contain at least 8 or more characters" required>
					<div id="signup-alert" class="alert alert-danger d-none"></div>
				</div>
				<div class="group">
					<label for="email" class="label">Email Address</label>
					<input id="email" type="email" class="input" name="email" required>
				</div>
				<div class="group">
					<button type="submit" class="button" value="Sign Up">Sign Up</button>
				</div>
				<div class="hr"></div>
			</div>
			</form>
		</div>
	</div>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script> 
	<script>
		const toastEl = document.getElementById('liveToast');
		if (toastEl) {
			const toast = new bootstrap.Toast(toastEl);
			toast.show();
		}
	</script>

</body>
</html>